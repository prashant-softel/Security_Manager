<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".welcomevisit">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        android:layout_margin="25dp"
        app:cardCornerRadius="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/vname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/tintchange"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/vname"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/tintchange"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sname"
        android:layout_marginBottom="3dp"
        android:background="@color/black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:id="@+id/relativevisitdet"
        >

        <LinearLayout
            android:id="@+id/contactL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contacttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/contact_no"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wcontactno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/entrydateL"
            android:layout_width="match_parent"
            android:layout_below="@id/contactL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/in_date"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entrydate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/entrytimeL"
            android:layout_width="match_parent"
            android:layout_below="@id/entrydateL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/entry_time"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entrytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/entrygateL"
            android:layout_width="match_parent"
            android:layout_below="@id/entrytimeL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/entry_gate_no"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entrygate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/purposeL"
            android:layout_width="match_parent"
            android:layout_below="@id/entrygateL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/purpose"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/purposewelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/companyL"
            android:layout_width="match_parent"
            android:layout_below="@id/purposeL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/company_name"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companywelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/vehicleL"
            android:layout_width="match_parent"
            android:layout_below="@id/companyL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/vehicle_no"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehiclewelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noteL"
            android:layout_width="match_parent"
            android:layout_below="@id/vehicleL"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/notee"
                android:textColor="@color/tintchange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textColor="@color/tintchange"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativevisitdet"
        android:layout_marginBottom="2dp"
        android:background="@color/black" />
    <ListView
        android:id="@+id/list"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/btndash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/dashboard"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/header"
            android:gravity="center"
            android:text="GO TO DASHBOARD"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>